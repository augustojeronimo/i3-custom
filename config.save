w# This file contains shortcut settings and use of previously installed tools.
# Do not use without using the script available at https://github.com/augustojeronimo/i3-custom

## Reload the configuration file ##
bindsym $mod+Shift+c	reload
bindsym $mod+F5		reload

# ----- With script dependencies ----- #

# System font
font pango:jetbrains 11

# Display walpaper
exec_always feh --bg-fill $HOME/.config/i3/wallpaper.png

# Window compositor
exec_always picom -f

# ----- Components ----- #

# Workspace bar
bar {
	status_command i3status -c $HOME/.config/i3/i3status.conf
	workspace_min_width 35

	colors {
		statusline #aaaaaa
		background #000000
		separator  #555555

		focused_workspace  #800080 #000000
		inactive_workspace #888888 #222222
        }
}


# ----- System keyboard shortcuts (designed for the Thinkpad br-abnt2 keyboard layout) ----- #

# Sets the modifier key (Mod4: Super | Mod1: Alt)
set $mod Mod4
set $alt Mod1

### Apps ###

# Terminal
bindsym $mod+Return exec terminator

# App launcher
bindsym $mod+space exec --no-startup-id dmenu_run

### Window management ###

# kill focused window
bindsym $mod+q kill

# Kill session
bindsym $mod+Shift+q exec "i3-nagbar -t warning -m 'You pessed the exit shortcut. Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"

# Move window
bindsym $mod+$alt+Up	move up
bindsym $mod+$alt+Down	move down
bindsym $mod+$alt+Left	move left
bindsym $mod+$alt+Right	move right

# Change focus
bindsym $mod+Up		focus up
bindsym $mod+Down	focus down
bindsym $mod+Left	focus left
bindsym $mod+Right	focus right

# Toggle layout
bindsym $mod+Tab layout toggle all

# Toggle split mode
bindsym $mod+semicolon split toggle

# Toggle fullscreen
bindsym $mod+F11 fullscreen toggle

# Resize
bindsym $mod+Control Up  	resize grow 	height 5 px or 5 ppt
bindsym $mod+Control Down  	resize shrink 	height 5 px or 5 ppt
bindsym $mod+Control Left  	resize grow 	width 5 px or 5 ppt
bindsym $mod+Control Right  	resize shrink 	width 5 px or 5 ppt


### Workspaces ###

# Focus defaults
focus_follows_mouse	no
focus_wrapping		no

# Names
set $ws1	"01"
set $ws2	"02"
set $ws3	"03"
set $ws4	"04"
set $ws5	"05"
set $ws6	"06"
set $ws7	"07"
set $ws8	"08"
set $ws9	"09"
set $ws10 	"10"

# Switch
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10

bindsym $mod+Page_Down	workspace next
bindsym $mod+Page_Up	workspace prev

# Move focused container
bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9
bindsym $mod+Shift+0 move container to workspace $ws10

